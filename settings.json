{
  // =========================
  // Editor
  // =========================
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 22,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "gutter",
  "editor.parameterHints.enabled": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Diff editor settings (moved here for better organization)
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,

  // =========================
  // Workbench (UI)
  // =========================
  // "workbench.sideBar.location": "right",
  // "workbench.activityBar.location": "bottom",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "material-icon-theme",

  // Material Icon Theme
  // "material-icon-theme.activeIconPack": "qwik",
  "material-icon-theme.activeIconPack": "nest",

  // Themes
  // "workbench.colorTheme": "Omni",
  // "workbench.colorTheme": "Aura Dark",
  // "workbench.colorTheme": "Vesper ++",
  // "workbench.colorTheme": "Vue Theme",
  "workbench.colorTheme": "Copilot Theme",
  // "workbench.colorTheme": "Gnome Light (Atom One)",
  // "workbench.colorTheme": "Min Light",

  // Control what shows when no editor is open
  "workbench.editor.empty.hint": "hidden",

  // =========================
  // Files & Explorer
  // =========================
  "files.eol": "\n",
  // "files.eol": "\r\n",
  "files.insertFinalNewline": true,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).*",
    "*.js": "$(capture).*",
    "*.jsx": "$(capture).*",
    "*.tsx": "$(capture).*",
    "*.astro": "${capture}.*",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "explorer.confirmDragAndDrop": false,

  // =========================
  // Terminal
  // =========================
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.env.osx": {},

  // =========================
  // Extensions
  // =========================
  "extensions.ignoreRecommendations": true,

  // =========================
  // Git
  // =========================
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "git.openRepositoryInParentFolders": "always",

  // =========================
  // Lint/Format
  // =========================
  // ESLint
  "eslint.format.enable": true,

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // =========================
  // Deno
  // =========================
  "deno.enable": true,
  "deno.codeLens.implementations": true,

  // =========================
  // Language Overrides
  // =========================

  // JavaScript
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // TypeScript
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "typescript.inlayHints.parameterNames.enabled": "all",

  // TypeScript React
  "[typescriptreact]": {
    // "editor.defaultFormatter": "denoland.vscode-deno"
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Import updates
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Vue
  "[vue]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Astro
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.formatOnSave": true
  },

  // Svelte
  "svelte.enable-ts-plugin": true,

  // Dart / Flutter
  "[dart]": {
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    // Flutter Icons
    "workbench.iconTheme": "theme"
  },
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.checkForSdkUpdates": false,
  "dart.openDevTools": "flutter",

  // Python
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.createEnvironment.trigger": "off",

  // Emmet / Django
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "[django-html]": {
    "editor.formatOnSave": false
  },

  // Kotlin
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": true,

  // Swift
  "[swift]": {
    "editor.defaultFormatter": "swiftlang.swift-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.inlayHints.enabled": "off"
  },

  // Go
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  // =========================
  // Debuggers / Toolchains
  // =========================
  // LLDB
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  "lldb.suppressUpdateNotifications": true,

  // =========================
  // Copilot
  // =========================
  "github.copilot.enable": {
    "*": true
    // "typescript": false,
    // "typescriptreact": false,
    // "dart": false
  },
  "github.copilot.nextEditSuggestions.enabled": false,

  // =========================
  // Miscel√¢nea
  // =========================
  "security.workspace.trust.untrustedFiles": "newWindow",
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "gitlens.launchpad.indicator.enabled": false,
  "geminicodeassist.displayInlineContextHint": false
}
