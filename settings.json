{
  // Editor
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 22,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "gutter",
  "editor.parameterHints.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Workbench
  // "workbench.sideBar.location": "right",
  // "workbench.activityBar.location": "bottom",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "material-icon-theme",
  // "material-icon-theme.activeIconPack": "qwik",
  "material-icon-theme.activeIconPack": "nest",
  "workbench.colorTheme": "Omni",
  // "workbench.colorTheme": "Aura Dark",
  // "workbench.colorTheme": "Vesper ++",
  // "workbench.colorTheme": "Vue Theme",
  // "workbench.colorTheme": "Gnome Light (Atom One)",
  // "workbench.colorTheme": "Visual Studio 2019 Light",

  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).*",
    "*.js": "$(capture).*",
    "*.jsx": "$(capture).*",
    "*.tsx": "$(capture).*",
    "*.astro": "${capture}.*",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "explorer.confirmDragAndDrop": false,

  // Window
  "window.menuBarVisibility": "compact",

  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.env.osx": {},

  // Extensions
  "extensions.ignoreRecommendations": true,

  // Git
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "git.openRepositoryInParentFolders": "always",

  // ESLint
  "eslint.format.enable": true,

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // JavaScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Vue
  "[vue]": {
    // "editor.defaultFormatter": "Vue.volar"
  },

  // Java
  "[java]": {
    "editor.defaultFormatter": "mwpb.java-prettier-formatter",
    "editor.inlayHints.enabled": "off"
  },

  // Astro
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.formatOnSave": true
  },

  // Kotlin
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": false,

  // Dart
  "[dart]": {
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    // Flutter Icons
    "workbench.iconTheme": "theme"
  },
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "dart.checkForSdkUpdates": false,
  "dart.openDevTools": "flutter",

  // Go
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },

  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "python.createEnvironment.trigger": "off",

  // PHP
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true
  },

  // SQL
  "[sql]": {
    // "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode",
    "editor.formatOnSave": false
  },

  // LLDB
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",

  // Prisma
  "prisma.showPrismaDataPlatformNotification": false,

  // TabNine
  "tabnine.experimentalAutoImports": true,

  // Telemetry and Security
  "redhat.telemetry.enabled": true,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "diffEditor.ignoreTrimWhitespace": true,
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true
  }
}
